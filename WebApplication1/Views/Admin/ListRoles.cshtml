@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<style>
    :root {
        --page-bg: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --card-bg: #ffffff;
        --header-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --text-primary: #2c3e50;
        --text-secondary: #718096;
        --border-color: #e9ecef;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --danger-color: #e74c3c;
        --success-color: #2ecc71;
    }

    [data-theme="dark"] {
        --page-bg: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        --card-bg: #1e293b;
        --header-bg: linear-gradient(135deg, #059669 0%, #047857 100%);
        --text-primary: #e2e8f0;
        --text-secondary: #94a3b8;
        --border-color: #334155;
        --shadow-color: rgba(0, 0, 0, 0.3);
        --danger-color: #fc8181;
        --success-color: #68d391;
    }

    body {
        background: var(--page-bg);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.3s ease;
    }

    /* Page Header Styles - Same as "Nos Catégories" */
    .page-header {
        background: var(--header-bg);
        color: white;
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        margin-top: 2rem;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 L1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.1)"/></svg>');
            background-size: cover;
        }

        .page-header h2 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: -0.5px;
            position: relative;
            z-index: 2;
        }

        .page-header .subtitle {
            font-size: 1.2rem;
            font-weight: 400;
            opacity: 0.9;
            position: relative;
            z-index: 2;
            margin-top: 0.5rem;
        }

    .roles-container {
        max-width: 1200px;
        margin: 0 auto 60px auto;
        padding: 0 20px;
    }

    .add-role-btn {
        background: var(--card-bg);
        color: #667eea;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px var(--shadow-color);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .add-role-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px var(--shadow-color);
            color: #764ba2;
            text-decoration: none;
            border-color: #667eea;
        }

    /* Grid layout for 3 cards per row */
    .roles-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .role-card {
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: 0 10px 40px var(--shadow-color);
        overflow: hidden;
        transition: all 0.3s ease;
        border: none;
        color: var(--text-primary);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .role-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px var(--shadow-color);
        }

        .role-card .card-header {
            background: var(--header-bg);
            color: white;
            border: none;
            padding: 1rem 1.5rem;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .role-card .card-body {
            padding: 1.5rem;
            background: var(--card-bg);
            flex-grow: 1;
        }

        .role-card .card-title {
            color: var(--text-primary);
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1rem;
            word-break: break-word;
        }

        .role-card .role-id {
            color: var(--text-secondary);
            font-size: 0.8rem;
            margin-bottom: 1rem;
            word-break: break-all;
        }

        .role-card .card-actions {
            padding: 0 1.5rem 1.5rem;
            background: var(--card-bg);
            margin-top: auto;
        }

        .role-card form {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            align-items: center;
        }

    .btn-edit {
        background: var(--header-bg);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        font-size: 0.9rem;
        flex: 1;
        text-align: center;
        justify-content: center;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }

    .btn-delete {
        background: var(--danger-color);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
        font-size: 0.9rem;
        flex: 1;
        text-align: center;
        justify-content: center;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
            color: white;
            text-decoration: none;
        }

    .confirm-delete-container {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        background: var(--card-bg);
        padding: 1rem;
        border-radius: 12px;
        border: 2px solid var(--danger-color);
        margin-top: 1rem;
    }

        .confirm-delete-container span {
            color: var(--danger-color);
            font-weight: 600;
            font-size: 0.9rem;
            text-align: center;
        }

    .confirm-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-yes {
        background: var(--danger-color);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 2px 10px rgba(231, 76, 60, 0.3);
        font-size: 0.85rem;
        flex: 1;
    }

        .btn-yes:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
        }

    .btn-no {
        background: var(--border-color);
        color: var(--text-primary);
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.85rem;
        flex: 1;
        text-align: center;
    }

        .btn-no:hover {
            background: var(--text-secondary);
            color: var(--text-primary);
            text-decoration: none;
            transform: translateY(-1px);
        }

    .empty-state-card {
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: 0 10px 40px var(--shadow-color);
        overflow: hidden;
        border: none;
        text-align: center;
        color: var(--text-primary);
        grid-column: 1 / -1;
    }

        .empty-state-card .card-header {
            background: var(--header-bg);
            color: white;
            border: none;
            padding: 1.5rem;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .empty-state-card .card-body {
            padding: 3rem 2rem;
            background: var(--card-bg);
        }

        .empty-state-card .card-title {
            color: var(--text-primary);
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

        .empty-state-card .btn-primary {
            background: var(--header-bg);
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            color: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

            .empty-state-card .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
                color: white;
                text-decoration: none;
            }

    /* Theme toggle button - Same style as categories page */
    .theme-toggle-categories {
        position: absolute;
        top: 2rem;
        right: 2rem;
        z-index: 1000;
    }

    .theme-toggle-btn-categories {
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        font-size: 0.9rem;
    }

        .theme-toggle-btn-categories:hover {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
        }

    /* Theme-aware transitions */
    * {
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Responsive design */
    @@media (max-width: 1024px) {
        .roles-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
        }

            .page-header h2 {
                font-size: 1.5rem;
            }

            .page-header .subtitle {
                font-size: 1rem;
            }

        .roles-grid {
            grid-template-columns: 1fr;
        }

        .roles-container {
            margin: 0 auto 30px auto;
        }

        .role-card form {
            flex-direction: column;
        }

        .btn-edit, .btn-delete {
            width: 100%;
        }

        .confirm-delete-container {
            width: 100%;
        }

        .theme-toggle-categories {
            top: 1rem;
            right: 1rem;
        }

        .theme-toggle-btn-categories {
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
        }

        .theme-text-categories {
            display: none;
        }
    }

    @@media (max-width: 480px) {
        .roles-container {
            padding: 0 15px;
        }

        .roles-grid {
            gap: 1rem;
        }

        .role-card .card-body {
            padding: 1rem;
        }

        .role-card .card-actions {
            padding: 0 1rem 1rem;
        }

        .theme-toggle-btn-categories {
            padding: 0.5rem;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            justify-content: center;
        }
    }
</style>

<!-- Page Header - Same style as "Nos Catégories" -->
<div class="page-header">
    <div class="container">
        <h2>
            <i class="fas fa-user-shield me-2"></i>
            Tous les Rôles
        </h2>
        <div class="subtitle">Gérez les rôles et les autorisations du système</div>
    </div>

    <!-- Theme Toggle Button - Same as categories page -->
    
</div>

<div class="container">
    <div class="roles-container">
        @if (Model.Any())
        {
            <a class="add-role-btn" asp-action="CreateRole" asp-controller="Admin">
                <i class="fas fa-plus-circle me-2"></i>
                Ajouter un nouveau rôle
            </a>

            <div class="roles-grid">
                @foreach (var role in Model)
                {
                    <div class="role-card card">
                        <div class="card-header">
                            <i class="fas fa-shield-alt me-2"></i>
                            Rôle
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@role.Name</h5>
                            <div class="role-id">
                                <i class="fas fa-id-card me-2"></i>
                                ID: @role.Id
                            </div>
                        </div>
                        <div class="card-actions">
                            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                                <div style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem;">
                                    <a asp-controller="Admin" asp-action="EditRole"
                                       asp-route-id="@role.Id" class="btn-edit">
                                        <i class="fas fa-edit me-2"></i>
                                        Modifier
                                    </a>
                                    <a href="#" class="btn-delete"
                                       onclick="confirmDelete('@role.Id', true)">
                                        <i class="fas fa-trash-alt me-2"></i>
                                        Supprimer
                                    </a>
                                </div>

                                <div id="confirmDeleteSpan_@role.Id" class="confirm-delete-container" style="display:none">
                                    <span>Êtes-vous sûr de vouloir supprimer ce rôle ?</span>
                                    <div class="confirm-buttons">
                                        <button type="submit" class="btn-yes">
                                            <i class="fas fa-check me-2"></i>
                                            Oui
                                        </button>
                                        <a href="#" class="btn-no"
                                           onclick="confirmDelete('@role.Id', false)">
                                            <i class="fas fa-times me-2"></i>
                                            Non
                                        </a>
                                    </div>
                                </div>

                                <span id="deleteSpan_@role.Id" style="display: inline"></span>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state-card card">
                <div class="card-header">
                    <i class="fas fa-user-shield me-2"></i>
                    Aucun rôle créé pour le moment
                </div>
                <div class="card-body">
                    <h5 class="card-title">Utilisez le bouton ci-dessous pour créer un rôle</h5>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole">
                        <i class="fas fa-plus-circle me-2"></i>
                        Créer un Rôle
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(roleId, isConfirmed) {
            var deleteSpan = document.getElementById("deleteSpan_" + roleId);
            var confirmDeleteSpan = document.getElementById("confirmDeleteSpan_" + roleId);

            if (isConfirmed) {
                deleteSpan.style.display = "none";
                confirmDeleteSpan.style.display = "flex";
            } else {
                deleteSpan.style.display = "inline";
                confirmDeleteSpan.style.display = "none";
            }
        }

        // Fonction pour changer le thème - Same as categories page
        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            const icon = document.getElementById('categoriesThemeIcon');
            const text = document.getElementById('categoriesThemeText');

            // Changer le thème
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Mettre à jour l'icône et le texte
            if (newTheme === 'dark') {
                if (icon) icon.className = 'fas fa-sun theme-icon-categories';
                if (text) text.textContent = '';
            } else {
                if (icon) icon.className = 'fas fa-moon theme-icon-categories';
                if (text) text.textContent = '';
            }

            // Déclencher un événement pour les composants qui en ont besoin
            window.dispatchEvent(new CustomEvent('themeChanged', { detail: newTheme }));
        }

        // Synchronisation avec le thème du layout
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser le thème au chargement
            const theme = localStorage.getItem('theme') || 'light';
            const icon = document.getElementById('categoriesThemeIcon');
            const text = document.getElementById('categoriesThemeText');

            // Appliquer le thème
            document.documentElement.setAttribute('data-theme', theme);

            // Mettre à jour l'icône et le texte
            if (theme === 'dark') {
                if (icon) icon.className = 'fas fa-sun theme-icon-categories';
                if (text) text.textContent = '';
            } else {
                if (icon) icon.className = 'fas fa-moon theme-icon-categories';
                if (text) text.textContent = '';
            }

            // Écouter les changements de thème depuis d'autres composants
            window.addEventListener('themeChanged', function(event) {
                const theme = event.detail;
                const icon = document.getElementById('categoriesThemeIcon');
                const text = document.getElementById('categoriesThemeText');

                if (theme === 'dark') {
                    if (icon) icon.className = 'fas fa-sun theme-icon-categories';
                    if (text) text.textContent = '';
                } else {
                    if (icon) icon.className = 'fas fa-moon theme-icon-categories';
                    if (text) text.textContent = '';
                }
            });
        });
    </script>
}