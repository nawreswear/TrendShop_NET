@model WebApplication1.ViewModels.EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<style>
    :root {
        --page-bg: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --card-bg: #ffffff;
        --header-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --text-primary: #2c3e50;
        --text-secondary: #718096;
        --border-color: #e9ecef;
        --input-bg: #f8f9fa;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --danger-color: #e74c3c;
        --success-color: #2ecc71;
    }

    [data-theme="dark"] {
        --page-bg: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        --card-bg: #1e293b;
        --header-bg: linear-gradient(135deg, #059669 0%, #047857 100%);
        --text-primary: #e2e8f0;
        --text-secondary: #94a3b8;
        --border-color: #334155;
        --input-bg: #2d3748;
        --shadow-color: rgba(0, 0, 0, 0.3);
        --danger-color: #fc8181;
        --success-color: #68d391;
    }

    body {
        background: var(--page-bg);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.3s ease;
    }

    /* Page Header Styles - Same as "Nos Catégories" */
    .page-header {
        background: var(--header-bg);
        color: white;
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 L1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.1)"/></svg>');
            background-size: cover;
        }

        .page-header h2 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: -0.5px;
            position: relative;
            z-index: 2;
        }

        .page-header .subtitle {
            font-size: 1.2rem;
            font-weight: 400;
            opacity: 0.9;
            position: relative;
            z-index: 2;
            margin-top: 0.5rem;
        }

    .edit-container {
        max-width: 1200px;
        margin: 0 auto 60px auto;
        padding: 0 20px;
    }

    .cards-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        margin-bottom: 30px;
    }

    .form-card, .users-card {
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: 0 10px 40px var(--shadow-color);
        padding: 35px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: var(--text-primary);
        height: fit-content;
    }

        .form-card:hover, .users-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px var(--shadow-color);
        }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: var(--input-bg);
        color: var(--text-primary);
    }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            background-color: var(--card-bg);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        .form-control:disabled {
            background-color: var(--input-bg);
            cursor: not-allowed;
            color: var(--text-secondary);
        }

    .btn {
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: var(--header-bg);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        }

    .btn-secondary {
        background: var(--card-bg);
        color: var(--text-secondary);
        border: 2px solid var(--border-color);
    }

        .btn-secondary:hover {
            background: var(--border-color);
            color: var(--text-primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-color);
        }

    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .users-card {
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: 0 10px 40px var(--shadow-color);
        overflow: hidden;
        transition: all 0.3s ease;
        color: var(--text-primary);
        display: flex;
        flex-direction: column;
    }

    .card-header {
        background: var(--header-bg);
        color: white;
        padding: 20px 30px;
        border-bottom: none;
    }

        .card-header h3 {
            margin: 0;
            font-size: 1.4rem;
            font-weight: 600;
        }

    .card-body {
        padding: 30px;
        min-height: 100px;
        background: var(--card-bg);
        flex-grow: 1;
    }

    .user-tag {
        display: inline-block;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
        color: #667eea;
        padding: 8px 16px;
        border-radius: 20px;
        margin: 5px;
        font-weight: 500;
        border: 2px solid rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
    }

        .user-tag:hover {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.25) 0%, rgba(118, 75, 162, 0.25) 100%);
            border-color: #667eea;
            transform: translateY(-2px);
        }

    .empty-state {
        color: var(--text-secondary);
        font-style: italic;
        text-align: center;
        padding: 20px;
    }

    .card-footer {
        background: var(--input-bg);
        padding: 20px 30px;
        border-top: 1px solid var(--border-color);
        margin-top: auto;
    }

    .text-danger {
        color: var(--danger-color);
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    /* Theme toggle button - Same style as categories page */
    .theme-toggle-categories {
        position: absolute;
        top: 2rem;
        right: 2rem;
        z-index: 1000;
    }

    .theme-toggle-btn-categories {
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        font-size: 0.9rem;
    }

        .theme-toggle-btn-categories:hover {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
        }

    /* Theme-aware transitions */
    * {
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Dark mode specific adjustments */
    [data-theme="dark"] .user-tag {
        color: #a3bffa;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
        border-color: rgba(102, 126, 234, 0.4);
    }

    @@media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
        }

            .page-header h2 {
                font-size: 1.5rem;
            }

            .page-header .subtitle {
                font-size: 1rem;
            }

        .edit-container {
            margin: 0 auto 30px auto;
        }

        .cards-container {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .form-card, .users-card {
            padding: 25px 20px;
        }

        .button-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            text-align: center;
        }

        .theme-toggle-categories {
            top: 1rem;
            right: 1rem;
        }

        .theme-toggle-btn-categories {
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
        }

        .theme-text-categories {
            display: none;
        }
    }

    @@media (max-width: 480px) {
        .theme-toggle-btn-categories {
            padding: 0.5rem;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            justify-content: center;
        }
    }
</style>

<!-- Page Header - Same style as "Nos Catégories" -->
<div class="page-header">
    <div class="container">
        <h2>
            <i class="fas fa-edit me-2"></i>
            Modifier le Rôle
        </h2>
        <div class="subtitle">Mettez à jour les informations du rôle</div>
    </div>

    <!-- Theme Toggle Button - Same as categories page -->
  
</div>

<div class="container">
    <div class="edit-container">
        <div class="cards-container">
            <!-- Carte 1: Formulaire d'édition -->
            <div class="form-card">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Id" class="form-label">
                            <i class="fas fa-id-card me-2"></i>
                            ID du Rôle
                        </label>
                        <input asp-for="Id" disabled class="form-control">
                    </div>

                    <div class="form-group">
                        <label asp-for="RoleName" class="form-label">
                            <i class="fas fa-tag me-2"></i>
                            Nom du Rôle
                        </label>
                        <input asp-for="RoleName" class="form-control" placeholder="Nom du rôle">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="button-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Mettre à jour
                        </button>
                        <a asp-action="ListRoles" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Annuler
                        </a>
                    </div>
                </form>
            </div>

            <!-- Carte 2: Utilisateurs dans le rôle -->
            <div class="users-card">
                <div class="card-header">
                    <h3>
                        <i class="fas fa-users me-2"></i>
                        Utilisateurs dans ce rôle
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <span class="user-tag">@user</span>
                        }
                    }
                    else
                    {
                        <p class="empty-state">Aucun utilisateur pour le moment</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id"
                       class="btn btn-primary" style="width: 100%;">
                        <i class="fas fa-user-edit me-2"></i>
                        Gérer les utilisateurs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Fonction pour changer le thème - Same as categories page
    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        const icon = document.getElementById('categoriesThemeIcon');
        const text = document.getElementById('categoriesThemeText');

        // Changer le thème
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);

        // Mettre à jour l'icône et le texte
        if (newTheme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-categories';
            if (text) text.textContent = '';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-categories';
            if (text) text.textContent = '';
        }

        // Déclencher un événement pour les composants qui en ont besoin
        window.dispatchEvent(new CustomEvent('themeChanged', { detail: newTheme }));
    }

    // Synchronisation avec le thème du layout
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser le thème au chargement
        const theme = localStorage.getItem('theme') || 'light';
        const icon = document.getElementById('categoriesThemeIcon');
        const text = document.getElementById('categoriesThemeText');

        // Appliquer le thème
        document.documentElement.setAttribute('data-theme', theme);

        // Mettre à jour l'icône et le texte
        if (theme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-categories';
            if (text) text.textContent = '';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-categories';
            if (text) text.textContent = '';
        }

        // Écouter les changements de thème depuis d'autres composants
        window.addEventListener('themeChanged', function(event) {
            const theme = event.detail;
            const icon = document.getElementById('categoriesThemeIcon');
            const text = document.getElementById('categoriesThemeText');

            if (theme === 'dark') {
                if (icon) icon.className = 'fas fa-sun theme-icon-categories';
                if (text) text.textContent = '';
            } else {
                if (icon) icon.className = 'fas fa-moon theme-icon-categories';
                if (text) text.textContent = '';
            }
        });
    });
</script>