@model WebApplication1.Models.Product
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.ImagePath ?? "noimage.jpg");
}

<style>
    :root {
        --page-bg: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --card-bg: #ffffff;
        --text-primary: #2d3748;
        --text-secondary: #718096;
        --border-color: #e9ecef;
        --hover-bg: linear-gradient(90deg, #f8f9ff 0%, #fff 100%);
        --create-btn-bg: #ffffff;
        --create-btn-color: #667eea;
        --empty-state-color: #718096;
        --empty-state-icon: #cbd5e0;
        --header-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --shadow-color: rgba(0,0,0,0.1);
    }

    [data-theme="dark"] {
        --page-bg: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        --card-bg: #1e293b;
        --text-primary: #e2e8f0;
        --text-secondary: #94a3b8;
        --border-color: #334155;
        --hover-bg: linear-gradient(90deg, #1e293b 0%, #0f172a 100%);
        --create-btn-bg: #334155;
        --create-btn-color: #e2e8f0;
        --empty-state-color: #94a3b8;
        --empty-state-icon: #475569;
        --header-bg: linear-gradient(135deg, #059669 0%, #047857 100%);
        --primary-gradient: linear-gradient(135deg, #059669 0%, #047857 100%);
        --shadow-color: rgba(0,0,0,0.3);
    }

    .details-product-page {
        background: var(--page-bg);
        min-height: 100vh;
        min-width: 100vw;
        padding: 2rem 0;
        transition: background 0.3s ease;
    }

    /* NOUVEAU HEADER STYLE COMME LES CATÉGORIES */
    .page-header {
        background: var(--header-bg);
        color: white;
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        margin-bottom: 2rem;
    }

        .page-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: -0.5px;
        }

    .details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
        margin-bottom: 3rem;
    }

    .details-card {
        background: var(--card-bg);
        border-radius: 20px;
        box-shadow: 0 10px 40px var(--shadow-color);
        padding: 40px;
        margin-bottom: 30px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: var(--text-primary);
    }

        .details-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px var(--shadow-color);
        }

    .card-header {
        color: var(--text-primary);
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 3px solid #667eea;
    }

    .product-details {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .detail-row {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 20px;
        padding: 15px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

        .detail-row:hover {
            background-color: var(--hover-bg);
        }

    .detail-label {
        color: var(--text-secondary);
        font-weight: 600;
        font-size: 1rem;
        display: flex;
        align-items: center;
    }

    .detail-value {
        color: var(--text-primary);
        font-size: 1.1rem;
        font-weight: 500;
        display: flex;
        align-items: center;
    }

    .product-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background: var(--primary-gradient);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .product-image {
        max-width: 300px;
        max-height: 300px;
        width: auto;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 5px 15px var(--shadow-color);
        transition: transform 0.3s ease;
        background: var(--card-bg);
        padding: 8px;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-custom {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        box-shadow: 0 4px 15px var(--shadow-color);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-edit {
        background: var(--primary-gradient);
        color: white;
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-back {
        background: var(--card-bg);
        color: #667eea;
        border: 2px solid #667eea;
    }

        .btn-back:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
        }

    /* Theme Toggle Button */
    .theme-toggle-details {
        position: absolute;
        top: 2rem;
        right: 2rem;
        z-index: 1000;
    }

    .theme-toggle-btn-details {
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        font-size: 0.9rem;
    }

        .theme-toggle-btn-details:hover {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
        }

    /* Theme-aware transitions */
    * {
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    @@media (max-width: 768px) {
        .detail-row {
            grid-template-columns: 1fr;
            gap: 10px;
        }

        .details-card {
            padding: 25px;
        }

        .page-header {
            padding: 1.5rem;
        }

            .page-header h1 {
                font-size: 1.5rem;
            }

        .product-image {
            max-width: 200px;
            max-height: 200px;
        }

        .theme-toggle-details {
            top: 1rem;
            right: 1rem;
        }

        .theme-toggle-btn-details {
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
        }

        .theme-text-details {
            display: none;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-custom {
            width: 200px;
            justify-content: center;
        }
    }

    @@media (max-width: 480px) {
        .details-product-page {
            padding: 1rem 0;
        }

        .page-header {
            padding: 1rem;
        }

            .page-header h1 {
                font-size: 1.25rem;
            }

        .product-image {
            max-width: 150px;
            max-height: 150px;
        }

        .theme-toggle-btn-details {
            padding: 0.5rem;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            justify-content: center;
        }
    }
</style>

<div class="details-product-page">
    <div class="container">
        <!-- NOUVEAU HEADER STYLE COMME LES CATÉGORIES -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <h1>
                    <i class="fas fa-info-circle me-2"></i>
                    Détails du Produit
                </h1>
            </div>
        </div>

        <div class="details-container">
            <div class="details-card">
                <h4 class="card-header">Informations du Produit</h4>

                <div class="product-details">
                    <div class="detail-row">
                        <dt class="detail-label">Nom :</dt>
                        <dd class="detail-value">@Html.DisplayFor(model => model.Name)</dd>
                    </div>

                    <div class="detail-row">
                        <dt class="detail-label">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="detail-value">@Html.DisplayFor(model => model.Price) Dt</dd>
                    </div>

                    <div class="detail-row">
                        <dt class="detail-label">@Html.DisplayNameFor(model => model.QteStock)</dt>
                        <dd class="detail-value">@Html.DisplayFor(model => model.QteStock)</dd>
                    </div>

                    <div class="detail-row">
                        <dt class="detail-label">Catégorie :</dt>
                        <dd class="detail-value">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
                    </div>

                    <div class="detail-row">
                        <dt class="detail-label">Image :</dt>
                        <dd class="detail-value">
                            <div class="product-image-container">
                                <img src="@photoPath" asp-append-version="true"
                                     class="product-image"
                                     alt="@Model.Name" />
                            </div>
                        </dd>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn-custom btn-edit">
                    <i class="fas fa-edit"></i>
                    Modifier
                </a>
                <a asp-action="Index" class="btn-custom btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Fonction pour changer le thème
    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        const icon = document.getElementById('detailsThemeIcon');
        const text = document.getElementById('detailsThemeText');

        // Changer le thème
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);

        // Mettre à jour l'icône et le texte
        if (newTheme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-details';
            if (text) text.textContent = '';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-details';
            if (text) text.textContent = '';
        }

        // Déclencher un événement pour les composants qui en ont besoin
        window.dispatchEvent(new CustomEvent('themeChanged', { detail: newTheme }));
    }

    // Synchronisation avec le thème du layout
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser le thème au chargement
        const theme = localStorage.getItem('theme') || 'light';
        const icon = document.getElementById('detailsThemeIcon');
        const text = document.getElementById('detailsThemeText');

        // Appliquer le thème
        document.documentElement.setAttribute('data-theme', theme);

        // Mettre à jour l'icône et le texte
        if (theme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-details';
            if (text) text.textContent = '';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-details';
            if (text) text.textContent = '';
        }

        // Écouter les changements de thème depuis d'autres composants
        window.addEventListener('themeChanged', function(event) {
            const theme = event.detail;
            const icon = document.getElementById('detailsThemeIcon');
            const text = document.getElementById('detailsThemeText');

            if (theme === 'dark') {
                if (icon) icon.className = 'fas fa-sun theme-icon-details';
                if (text) text.textContent = '';
            } else {
                if (icon) icon.className = 'fas fa-moon theme-icon-details';
                if (text) text.textContent = '';
            }
        });
    });
</script>