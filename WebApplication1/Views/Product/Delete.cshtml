@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    :root {
        --bg-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --card-bg: #ffffff;
        --text-color: #212529;
        --text-secondary: #6c757d;
        --warning-bg: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        --warning-border: #ffc107;
        --warning-text: #856404;
        --danger-gradient: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        --border-color: #e9ecef;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --hover-bg: #f8f9fa;
    }

    [data-theme="dark"] {
        --bg-gradient: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        --card-bg: #2d3748;
        --text-color: #e2e8f0;
        --text-secondary: #a0aec0;
        --warning-bg: linear-gradient(135deg, #453411 0%, #5a4a1a 100%);
        --warning-border: #d69e2e;
        --warning-text: #faf089;
        --danger-gradient: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
        --border-color: #4a5568;
        --shadow-color: rgba(0, 0, 0, 0.3);
        --hover-bg: #2d3748;
    }

    body {
        background: var(--bg-gradient);
        min-height: 100vh;
        padding: 0px 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.3s ease;
    }

    /* AJOUT DU MARGIN-TOP AU PREMIER ÉLÉMENT (CONTAINER) */
    .delete-container {
        max-width: 700px;
        margin: 2rem auto 4rem auto; /* ← MARGIN AJOUTÉ ICI (2rem en haut) */
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: 0 10px 40px var(--shadow-color);
        padding: 40px;
        animation: fadeIn 0.5s ease-in;
        color: var(--text-color);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .delete-container h1 {
        color: #dc3545;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    [data-theme="dark"] .delete-container h1 {
        color: #fc8181;
    }

    .warning-message {
        background: var(--warning-bg);
        border-left: 5px solid var(--warning-border);
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.2);
    }

        .warning-message h3 {
            color: var(--warning-text);
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .warning-message h3::before {
                content: "⚠️";
                font-size: 1.5rem;
            }

    .product-details h4 {
        color: var(--text-color);
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 3px solid var(--border-color);
    }

    .product-details dl {
        margin-bottom: 30px;
    }

    .product-details dt {
        color: var(--text-secondary);
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 12px 0;
    }

    .product-details dd {
        color: var(--text-color);
        font-size: 1.1rem;
        font-weight: 500;
        padding: 12px 0;
        border-bottom: 1px solid var(--border-color);
    }

    .product-details .row:hover dd {
        background-color: var(--hover-bg);
        padding-left: 10px;
        transition: all 0.3s ease;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid var(--border-color);
    }

    .btn-danger {
        background: var(--danger-gradient);
        border: none;
        color: white;
        padding: 12px 30px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    [data-theme="dark"] .btn-danger {
        box-shadow: 0 4px 15px rgba(229, 62, 62, 0.4);
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
        background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
    }

    [data-theme="dark"] .btn-danger:hover {
        box-shadow: 0 6px 20px rgba(229, 62, 62, 0.6);
    }

    .btn-outline-danger {
        background: var(--card-bg);
        border: 2px solid #dc3545;
        color: #dc3545;
        padding: 10px 28px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    [data-theme="dark"] .btn-outline-danger {
        border-color: #fc8181;
        color: #fc8181;
    }

    .btn-outline-danger:hover {
        background: #dc3545;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

    [data-theme="dark"] .btn-outline-danger:hover {
        background: #fc8181;
        border-color: #fc8181;
    }

    form {
        margin: 0;
    }

    /* Theme Toggle Button */
    .theme-toggle {
        position: fixed;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        z-index: 1000;
        color: var(--text-color);
    }

        .theme-toggle:hover {
            transform: scale(1.1);
            background: rgba(255, 255, 255, 0.3);
        }

    [data-theme="dark"] .theme-toggle {
        background: rgba(0, 0, 0, 0.2);
        color: var(--text-color);
    }

        [data-theme="dark"] .theme-toggle:hover {
            background: rgba(0, 0, 0, 0.3);
        }

    @@media (max-width: 768px) {
        /* AJUSTEMENT DU MARGIN POUR MOBILE */
        .delete-container {
            margin: 1rem 20px 3rem 20px; /* ← Marge réduite sur mobile */
            padding: 30px 20px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .theme-toggle {
            top: 10px;
            right: 10px;
            width: 40px;
            height: 40px;
            font-size: 1.2rem;
        }
    }

    @@media (max-width: 480px) {
        .delete-container {
            margin: 0.5rem 15px 2rem 15px; /* ← Marge encore plus réduite sur petits écrans */
            padding: 20px 15px;
        }
    }
</style>

<div class="delete-container">
    <h1>Supprimer</h1>

    <div class="warning-message">
        <h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
    </div>

    <div class="product-details">
        <h4>Produit</h4>
        <dl class="row">
            <dt class="col-sm-2">
                Nom :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QteStock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QteStock)
            </dd>
            <dt class="col-sm-2">
                Catégorie :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <div class="action-buttons">
                <input type="submit" value="Supprimer" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-danger">Retour</a>
            </div>
        </form>
    </div>
</div>

<script>
    // Theme management
    document.addEventListener('DOMContentLoaded', function() {
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const htmlElement = document.documentElement;

        const savedTheme = localStorage.getItem('theme') || 'light';
        htmlElement.setAttribute('data-theme', savedTheme);
        updateThemeIcon(savedTheme);

        themeToggle.addEventListener('click', function() {
            const currentTheme = htmlElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';

            htmlElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        });

        function updateThemeIcon(theme) {
            themeIcon.textContent = theme === 'light' ? '' : '';
        }
    });
</script>