<script>
    // Fonction pour changer le thème
    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        const icon = document.getElementById('heroThemeIcon');
        const text = document.getElementById('heroThemeText');

        // Changer le thème
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);

        // Mettre à jour l'icône et le texte
        if (newTheme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-hero';
            if (text) text.textContent = '';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-hero';
            if (text) text.textContent = '';
        }

        // Mettre à jour le gradient de la hero section
        updateHeroGradient(newTheme);

        // Déclencher un événement pour les composants qui en ont besoin
        window.dispatchEvent(new CustomEvent('themeChanged', { detail: newTheme }));
    }

    // Fonction pour mettre à jour le gradient de la hero section
    function updateHeroGradient(theme) {
        const heroSection = document.querySelector('.hero-elegant');
        if (heroSection) {
            if (theme === 'dark') {
                heroSection.style.background = 'linear-gradient(135deg, #0f172a 0%, #1e40af 50%, #1e3a8a 100%)';
            } else {
                heroSection.style.background = 'linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #0ea5e9 100%)';
            }
        }
    }

    // Synchronisation avec le thème du layout
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser le thème au chargement
        const theme = localStorage.getItem('theme') || 'light';
        const icon = document.getElementById('heroThemeIcon');
        const text = document.getElementById('heroThemeText');

        // Appliquer le thème
        document.documentElement.setAttribute('data-theme', theme);

        // Mettre à jour l'icône et le texte
        if (theme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-hero';
            if (text) text.textContent = '';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-hero';
            if (text) text.textContent = '';
        }

        // Mettre à jour le gradient de la hero section
        updateHeroGradient(theme);

        // Écouter les changements de thème depuis d'autres composants
        window.addEventListener('themeChanged', function(event) {
            const theme = event.detail;
            const icon = document.getElementById('heroThemeIcon');
            const text = document.getElementById('heroThemeText');

            if (theme === 'dark') {
                if (icon) icon.className = 'fas fa-sun theme-icon-hero';
                if (text) text.textContent = '';
            } else {
                if (icon) icon.className = 'fas fa-moon theme-icon-hero';
                if (text) text.textContent = '';
            }

            // Mettre à jour le gradient de la hero section
            updateHeroGradient(theme);
        });
    });

    function updatePageTheme(theme) {
        // Mettre à jour les variables CSS spécifiques à la page
        const root = document.documentElement;

        if (theme === 'dark') {
            root.style.setProperty('--light-bg', '#0f172a');
            root.style.setProperty('--text-primary', '#f1f5f9');
            root.style.setProperty('--text-secondary', '#cbd5e1');
            root.style.setProperty('--card-bg', '#1e293b');
            root.style.setProperty('--border-color', '#334155');
            root.style.setProperty('--bg-primary', '#0f172a');
            root.style.setProperty('--hero-gradient', 'linear-gradient(135deg, #0f172a 0%, #1e40af 50%, #1e3a8a 100%)');
        } else {
            root.style.setProperty('--light-bg', '#eff6ff');
            root.style.setProperty('--text-primary', '#1a202c');
            root.style.setProperty('--text-secondary', '#4a5568');
            root.style.setProperty('--card-bg', '#ffffff');
            root.style.setProperty('--border-color', '#e2e8f0');
            root.style.setProperty('--bg-primary', '#ffffff');
            root.style.setProperty('--hero-gradient', 'linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #0ea5e9 100%)');
        }
    }

    // Appliquer le thème au chargement
    document.addEventListener('DOMContentLoaded', function() {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        updatePageTheme(currentTheme);
    });

    // Écouter les changements de thème
    window.addEventListener('themeChanged', function(event) {
        updatePageTheme(event.detail);
    });
</script>