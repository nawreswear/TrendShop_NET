<script>
    // Gestion du thème pour la page d'accueil
    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        const icon = document.getElementById('heroThemeIcon');
        const text = document.getElementById('heroThemeText');

        // Ajouter une classe de transition pour un changement fluide
        document.documentElement.classList.add('theme-transitioning');

        // Changer le thème
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);

        // Mettre à jour l'icône et le texte
        if (newTheme === 'dark') {
            if (icon) {
                icon.className = 'fas fa-sun theme-icon-hero';
                icon.style.transform = 'rotate(360deg)';
            }
            if (text) text.textContent = 'Mode Clair';
        } else {
            if (icon) {
                icon.className = 'fas fa-moon theme-icon-hero';
                icon.style.transform = 'rotate(0deg)';
            }
            if (text) text.textContent = 'Mode Sombre';
        }

        // Mettre à jour le gradient de la hero section
        updateHeroGradient(newTheme);

        // Retirer la classe de transition après l'animation
        setTimeout(() => {
            document.documentElement.classList.remove('theme-transitioning');
        }, 500);

        // Déclencher un événement pour les autres composants
        window.dispatchEvent(new CustomEvent('themeChanged', { detail: newTheme }));
    }

    // Mettre à jour le gradient de la hero section
    function updateHeroGradient(theme) {
        const heroSection = document.querySelector('.hero-elegant');
        if (heroSection) {
            if (theme === 'dark') {
                heroSection.style.background = 'var(--primary-gradient)';
            } else {
                heroSection.style.background = 'var(--primary-gradient)';
            }
        }
    }

    // Initialiser le thème au chargement
    function initTheme() {
        const theme = localStorage.getItem('theme') || 'light';
        const icon = document.getElementById('heroThemeIcon');
        const text = document.getElementById('heroThemeText');

        // Appliquer le thème
        document.documentElement.setAttribute('data-theme', theme);

        // Mettre à jour l'icône et le texte
        if (theme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-hero';
            if (text) text.textContent = 'Mode Clair';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-hero';
            if (text) text.textContent = 'Mode Sombre';
        }

        // Mettre à jour le gradient de la hero section
        updateHeroGradient(theme);
    }

    // Gestion des animations au défilement
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser le thème
        initTheme();

        // Observer pour les animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.classList.contains('feature-elegant')) {
                        entry.target.classList.add('animate');
                    } else if (entry.target.classList.contains('stat-card')) {
                        entry.target.classList.add('animate');
                    }
                }
            });
        }, observerOptions);

        // Observer les éléments à animer
        document.querySelectorAll('[data-animate]').forEach(element => {
            observer.observe(element);
        });

        // Animation des chiffres des stats
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const finalValue = stat.textContent;
            if (finalValue.includes('+') || finalValue.includes('%')) {
                stat.textContent = '0' + finalValue.slice(-1);
                setTimeout(() => {
                    stat.textContent = finalValue;
                }, 1000);
            }
        });

        // Effet de particules sur le hero (optionnel)
        function createParticle() {
            const particle = document.createElement('div');
            particle.style.cssText = `
                position: absolute;
                width: 4px;
                height: 4px;
                background: rgba(255, 255, 255, 0.6);
                border-radius: 50%;
                pointer-events: none;
                animation: floatParticle 6s ease-in-out infinite;
            `;

            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 100 + '%';
            particle.style.animationDelay = Math.random() * 6 + 's';

            document.querySelector('.hero-elegant').appendChild(particle);

            setTimeout(() => {
                particle.remove();
            }, 6000);
        }

        // Créer quelques particules
        for (let i = 0; i < 8; i++) {
            setTimeout(createParticle, i * 800);
        }

        // Continuer à créer des particules périodiquement
        setInterval(createParticle, 3000);
    });

    // Ajout des keyframes pour les particules
    const style = document.createElement('style');
    style.textContent = `
         floatParticle {
            0%, 100% {
                transform: translateY(0px) translateX(0px) scale(1);
                opacity: 0;
            }
            10% {
                opacity: 0.8;
            }
            90% {
                opacity: 0.8;
            }
            50% {
                transform: translateY(-40px) translateX(20px) scale(1.2);
            }
        }
    `;
    document.head.appendChild(style);

    // Synchronisation du thème avec le layout
    window.addEventListener('themeChanged', function(event) {
        const theme = event.detail;
        const icon = document.getElementById('heroThemeIcon');
        const text = document.getElementById('heroThemeText');

        if (theme === 'dark') {
            if (icon) icon.className = 'fas fa-sun theme-icon-hero';
            if (text) text.textContent = 'Mode Clair';
        } else {
            if (icon) icon.className = 'fas fa-moon theme-icon-hero';
            if (text) text.textContent = 'Mode Sombre';
        }

        updateHeroGradient(theme);
    });
</script>